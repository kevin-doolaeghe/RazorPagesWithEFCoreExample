@page
@model WebApp.Pages.Accounts.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>Accounts</h1>

<p>
    <a asp-page="Create">New account</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].Balance)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Account) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Balance)
                </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.AccountId">Details</a> |
                    <a asp-page="./Edit" asp-route-id="@item.AccountId">Edit</a> |
                    <a asp-page="./Delete" asp-route-id="@item.AccountId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
